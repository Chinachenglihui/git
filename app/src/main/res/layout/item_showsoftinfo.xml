<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_softmgr_checkBox"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/item_speed_iv"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_softmgr_checkBox"
        android:layout_toEndOf="@+id/item_softmgr_checkBox"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
    <TextView
        android:id="@+id/item_speed_isapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:text="2.22"
        android:paddingRight="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_alignTop="@+id/item_speed_memory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/item_speed_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="通讯大全"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/item_speed_memory"
        android:layout_alignStart="@+id/item_speed_memory" />

    <TextView
        android:id="@+id/item_speed_memory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:text="通讯大全"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_below="@+id/item_speed_appname"
        android:layout_toRightOf="@+id/item_speed_iv"
        android:layout_toEndOf="@+id/item_speed_iv"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />
</RelativeLayout>